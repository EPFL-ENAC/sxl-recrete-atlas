{
  "version": 8,
  "name": "Default Style",
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://tile.osm.ch/osm-swiss-style/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 20
    },
    "swissimage": {
      "type": "raster",
      "tileSize": 256,
      "minzoom": 0,
      "maxzoom": 20,
      "tiles": ["https://wmts.geo.admin.ch/1.0.0/ch.swisstopo.swissimage-product/default/current/3857/{z}/{x}/{y}.jpeg"]
    }
  },
  "layers": [
    { "id": "classic",
      "type": "raster",
      "source": "osm",
      "layout": { "visibility": "none" }
    },
    { "id": "light",
      "type": "raster",
      "source": "osm",
      "paint": {
        "raster-saturation": -0.9,
        "raster-brightness-min": 0.7
      }
    },
    { "id": "dark",
      "type": "raster",
      "source": "osm",
      "paint": {
        "raster-saturation": -1,
        "raster-brightness-max": 0.2
      },
      "layout": { "visibility": "none" }
    },
    { "id": "swissimage",
      "type": "raster",
      "source": "swissimage",
      "layout": { "visibility": "none" }
    }
  ]
}
